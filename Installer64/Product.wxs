<?xml version="1.0" encoding="UTF-8"?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi"
     xmlns:util="http://schemas.microsoft.com/wix/UtilExtension">
  <Product Id="*" Name="Nuacom service provider" Language="1033" Version="1.0.0.0" Manufacturer="Nuacom" UpgradeCode="2fc61d69-f4f5-4db8-8855-f9417ed7e033">
    <Package InstallerVersion="405" Compressed="yes" InstallScope="perMachine" Platform="x64" />

    <MajorUpgrade DowngradeErrorMessage="A newer version of [ProductName] is already installed." />
    <Media Id="1" Cabinet="media1.cab" EmbedCab="yes" CompressionLevel="high"/>

    <Feature Id="ProductFeature" Title="Nuacom service provider" Level="1">
      <ComponentGroupRef Id="Provider" />
      <ComponentGroupRef Id="Config" />
      <ComponentGroupRef Id="Service" />
      <ComponentRef Id="ApplicationShortcut" />
    </Feature>
    <DirectoryRef Id="TARGETDIR">
      <Merge Id="VC12Redist" SourceFile="$(var.SolutionDir)runtime\Microsoft_VC120_CRT_x64.msm" DiskId="1" Language="0"/>
      <Merge Id="VC14Redist" SourceFile="$(var.SolutionDir)runtime\Microsoft_VC140_CRT_x64.msm" DiskId="1" Language="0"/>
    </DirectoryRef>
    <Feature Id="VC12Redist" Title="Visual C++ 12.0 Runtime" AllowAdvertise="no" Display="hidden" Level="1">
      <MergeRef Id="VC12Redist"/>
    </Feature>
    <Feature Id="VC14Redist" Title="Visual C++ 14.0 Runtime" AllowAdvertise="no" Display="hidden" Level="1">
      <MergeRef Id="VC14Redist"/>
    </Feature>

    <Property Id="WixShellExecTarget" Value="[#config.exe]" />
    <CustomAction Id="LaunchApplication" BinaryKey="WixCA" DllEntry="WixShellExec" Impersonate="yes" />

    <Binary Id='caDll' SourceFile='$(var.SolutionDir)x64\Release\NuacomCA.dll'/>
    <CustomAction Id='PropertyAssignForInstallProvider' Property='InstallProvider'
					  Value='[#nuacom.tsp]' />
    <CustomAction Id='InstallProvider' BinaryKey='caDll' DllEntry='InstallProvider' Execute='deferred' Impersonate='no'/>
    <CustomAction Id='UninstallProvider' BinaryKey='caDll' DllEntry='UninstallProvider' Execute='deferred' Impersonate='no'/>
    
    <InstallExecuteSequence>
      <Custom Action='PropertyAssignForInstallProvider' After='InstallFiles'>
        NOT Installed
      </Custom>
      <Custom Action='InstallProvider' After='PropertyAssignForInstallProvider'>
        NOT Installed
      </Custom>
      <Custom Action='UninstallProvider' Before='DeleteServices'>
        REMOVE~="ALL"
      </Custom>
      <!--Start application at the end of installation-->
      <Custom Action='LaunchApplication' After='InstallFinalize'>
        NOT REMOVE~="ALL"
      </Custom>
    </InstallExecuteSequence>
  </Product>

  <Fragment>
		<Directory Id="TARGETDIR" Name="SourceDir">
      <Directory Id="ProgramMenuFolder">
        <Directory Id="ApplicationProgramsFolder" Name="Nuacom service provider"/>
      </Directory>
      <Directory Id="ProgramFiles64Folder">
        <Directory Id="INSTALLFOLDER" Name="Nuacom service provider" />
      </Directory>
      <Directory Id="System64Folder">
      </Directory>
    </Directory>
	</Fragment>

  <Fragment>
    <ComponentGroup Id="Provider" Directory="System64Folder">
      <Component Id="Component1" Win64="yes">
        <File Source="$(var.SolutionDir)x64\Release\nuacom.tsp" />
      </Component>
      <Component Id="Component3" Win64="yes">
        <File Source="$(var.SolutionDir)openssl\win64\libeay32.dll" />
      </Component>
      <Component Id="Component4" Win64="yes">
        <File Source="$(var.SolutionDir)openssl\win64\ssleay32.dll" />
      </Component>
    </ComponentGroup>
    <ComponentGroup Id="Config" Directory="INSTALLFOLDER">
      <Component Id="Component5" Win64="yes">
        <File Source="$(var.SolutionDir)x64\Release\config.exe" />
        <RegistryKey
           Root="HKLM"
           Key="Software\Microsoft\Windows\CurrentVersion\Run">
          <RegistryValue Id="config" Name="config" Value="[#config.exe]" Type="string" />
        </RegistryKey>
      </Component>
    </ComponentGroup>
    <ComponentGroup Id="Service" Directory="INSTALLFOLDER">
      <Component Id="Component6" Win64="yes">
        <File Source="$(var.SolutionDir)x64\Release\nuacomsrv.exe" />
        <!--Install the service-->
        <ServiceInstall Id="nuacomsrv"
          Type="ownProcess"
          DisplayName="nuacom communication service"
          Description="nuacom communication service"
          Name="nuacomsrv"
          Start="auto"
          ErrorControl="normal">
          <util:PermissionEx User="Everyone"
                             ServiceStart="yes"
                             ServiceStop="yes"/>
          <util:ServiceConfig
                      ResetPeriodInDays="0"
                      RestartServiceDelayInSeconds="5"
                      FirstFailureActionType="restart"
                      SecondFailureActionType="restart"
                      ThirdFailureActionType="restart"/>
          </ServiceInstall>
        <ServiceControl Id="nuacomsrv" Name="nuacomsrv" Start="install" Remove="both" Stop="both" Wait="yes" />
      </Component>
    </ComponentGroup>
    <DirectoryRef Id="ApplicationProgramsFolder">
      <Component Id="ApplicationShortcut">
        <Shortcut Id="ApplicationStartMenuShortcut"
                  Name="nuacom provider configuration utility"
                  Description="nuacom provider configuration utility"
                  Target="[#config.exe]" />
        <RemoveFolder Id="CleanUpShortCut" Directory="ApplicationProgramsFolder" On="uninstall"/>
        <RegistryValue Root="HKCU" Key="Software\Nuacom\TSP" Name="installed" Type="integer" Value="1" KeyPath="yes"/>
      </Component>
    </DirectoryRef>
  </Fragment>
</Wix>
